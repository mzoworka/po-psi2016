            <k:KinectTileButton Label="" Click="ButtonOnClick" LabelBackground="{x:Null}" Foreground="{x:Null}" BorderBrush="#FFFFB900" Height="103" Margin="445,448,503,168" FontWeight="Bold" FontFamily="VanDijkDEE" FontSize="64" Width="Auto" BorderThickness="2" RenderTransformOrigin="0.414,0.566" Content="SPACJA">
