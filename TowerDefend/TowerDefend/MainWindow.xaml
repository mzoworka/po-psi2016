                    <ImageBrush ImageSource="start.png"/>
                </k:KinectTileButton.Background>
            </k:KinectTileButton>

            <k:KinectUserViewer VerticalAlignment="Top" HorizontalAlignment="Left" k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="300" />


        </Grid>
    </k:KinectRegion>
</Window>
